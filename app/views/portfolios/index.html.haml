%section#sample_work
  %h1 Sample Work
  #content_sample_work.info-wrapper.hiddable
    .info-wrap-inner
      .info-wrap-top-arrow
      .slider_wrapper
        %ul#sample_work_slider
          -for portfolio in @portfolios
            %li
              %a(href = "#portfolio_#{portfolio.id}")
                %img{:src => portfolio.image.url(:medium), :alt => ""}
              %p.sample_work_name= portfolio.title
              %p.sample_work_date= portfolio.release_date.year
        .sample_work_hidden_content
          -for portfolio in @portfolios
            %div(id = "portfolio_#{portfolio.id}")
              %p.sample_work_popup_name= portfolio.title
              %img{:src => portfolio.image.url(:large), :alt => ""}
              %p.sample_work_popup_date= portfolio.release_date
              %p.sample_work_popup_description= portfolio.description
             
          