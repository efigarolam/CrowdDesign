= form_for @portfolio, :url => portfolios_path, :html => { :multipart => true } do |f|
  - if @portfolio.errors.any?
    #error_explanation
      %h2= pluralize(@portfolio.errors.count, "error") + "prohibited this portfolio from being saved:"

      %ul
        - @portfolio.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    %br
    = f.text_field :title
  .field
    = f.label :description
    %br
    = f.text_field :description
  .field
    = f.label :release_date
    %br
    = f.date_select :release_date
  .field
    = f.label :image
    %br
    = f.file_field :image
  .actions
    = f.submit
